@model TicketShop.RestApiClient.Model.Transaction

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="panel @ViewData["panel-class"]">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewData["PaymentStatus"]</h3>
        </div>
        <div class="panel-body">
            @if (Model.PaymentStatus == "PaymentApproved")
            {
                <h4>Summary</h4>
                <ul class="list-group">
                    <li class="list-group-item">TransactionId: @Model.TransactionID</li>
                    <li class="list-group-item">Number of tickets: @ViewData["noTickets"]</li>
                    <li class="list-group-item">Total amount paid: @Model.TotalAmount</li>
                    <li class="list-group-item">Payment Reference: @Model.PaymentReference</li>
                </ul>

            }
            else
            {
                <h4>Summary</h4>
                <ul class="list-group">
                    <li class="list-group-item">TransactionId: @Model.TransactionID</li>
                    <li class="list-group-item">Payment Reference: @Model.PaymentReference</li>
                    <li class="list-group-item">Payment Status: @ViewData["PaymentStatus"]</li>
                </ul>
                <p>Something seems to have gone wrong, please try again or contact customer service.</p>
            }
        </div>
    </div>
</div>
